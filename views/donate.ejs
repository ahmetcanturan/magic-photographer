    <%- include("partials/menu.ejs")%>
        <!-- contact -->
        <div class="contact">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="titlepage text_align_center">
                            <img src="/images/logo1.png" alt="Italian Trulli">
                            <span></span>
                            <h2>Donate to Photographer </h2>
                        </div>
                    </div>
                    <div class="col-md-8 offset-md-2">

                        <form id="request" class="main_form" action="/donate/<%=postId%>" method="POST">
                            <div class="row">
                                <div class="col-md-12">
                                    <input class="form_control" placeholder="name *" type="text" name="name"
                                        required="true">
                                </div>
                                <% if(error) {%>
                                    <% for (err of error){%>
                                        <% if(err.param=="name" ) {%>
                                            <div class="col-md-12">
                                                <div class="alert alert-danger">
                                                    <%=err.msg%>
                                                </div>
                                            </div>
                                            <% }%>
                                                <% }%>
                                                    <% }%>
                                                        <div class="col-md-12">
                                                            <input class="form_control" placeholder="surname *"
                                                                type="text" name="surname" required="true">
                                                        </div>
                                                        <% if(error) {%>
                                                            <% for (err of error){%>
                                                                <% if(err.param=="surname" ) {%>
                                                                    <div class="col-md-12">
                                                                        <div class="alert alert-danger">
                                                                            <%=err.msg%>
                                                                        </div>
                                                                    </div>
                                                                    <% }%>
                                                                        <% }%>
                                                                            <% }%>

                                                                                <div class="col-md-12">
                                                                                    <input class="form_control"
                                                                                        placeholder="Email *"
                                                                                        type="email" required="true"
                                                                                        name="email">
                                                                                </div>
                                                                                <% if(error) {%>
                                                                                    <% for (err of error){%>
                                                                                        <% if(err.param=="email" ) {%>
                                                                                            <div class="col-md-12">
                                                                                                <div
                                                                                                    class="alert alert-danger">
                                                                                                    <%=err.msg%>
                                                                                                </div>
                                                                                            </div>
                                                                                            <% }%>
                                                                                                <% }%>
                                                                                                    <% }%>
                                                                                                        <div
                                                                                                            class="col-md-12">
                                                                                                            <input
                                                                                                                class="form_control"
                                                                                                                placeholder="TC *"
                                                                                                                required="true"
                                                                                                                type="text"
                                                                                                                name="tc">
                                                                                                        </div>
                                                                                                        <% if(error) {%>
                                                                                                            <% for (err
                                                                                                                of
                                                                                                                error){%>
                                                                                                                <% if(err.param=="tc"
                                                                                                                    )
                                                                                                                    {%>
                                                                                                                    <div
                                                                                                                        class="col-md-12">
                                                                                                                        <div
                                                                                                                            class="alert alert-danger">
                                                                                                                            <%=err.msg%>
                                                                                                                        </div>
                                                                                                                    </div>
                                                                                                                    <%}%>
                                                                                                                        <%}%>
                                                                                                                            <%}%>
                                                                                                                                <div
                                                                                                                                    class="col-md-12">
                                                                                                                                    <input
                                                                                                                                        class="form_control"
                                                                                                                                        placeholder="Phone number start with (5) *"
                                                                                                                                        type="text"
                                                                                                                                        name="tel"
                                                                                                                                        required="true">
                                                                                                                                </div>
                                                                                                                                <% if(error)
                                                                                                                                    {%>
                                                                                                                                    <% for
                                                                                                                                        (err
                                                                                                                                        of
                                                                                                                                        error){%>
                                                                                                                                        <% if(err.param=="tel"
                                                                                                                                            )
                                                                                                                                            {%>
                                                                                                                                            <div
                                                                                                                                                class="col-md-12">
                                                                                                                                                <div
                                                                                                                                                    class="alert alert-danger">
                                                                                                                                                    <%=err.msg%>
                                                                                                                                                </div>
                                                                                                                                            </div>

                                                                                                                                            <%
                                                                                                                                                }%>
                                                                                                                                                <%
                                                                                                                                                    }%>
                                                                                                                                                    <%
                                                                                                                                                        }%>
                                                                                                                                                        <div
                                                                                                                                                            class="col-md-12">
                                                                                                                                                            <input
                                                                                                                                                                class="form_control"
                                                                                                                                                                placeholder="Donation amount (use dot instead of comma) *"
                                                                                                                                                                required="true"
                                                                                                                                                                type="text"
                                                                                                                                                                name="amount">
                                                                                                                                                        </div>
                                                                                                                                                        <% if(error)
                                                                                                                                                            {%>
                                                                                                                                                            <% for
                                                                                                                                                                (err
                                                                                                                                                                of
                                                                                                                                                                error){%>
                                                                                                                                                                <% if(err.param=="amount"
                                                                                                                                                                    )
                                                                                                                                                                    {%>
                                                                                                                                                                    <div
                                                                                                                                                                        class="col-md-12">
                                                                                                                                                                        <div
                                                                                                                                                                            class="alert alert-danger">
                                                                                                                                                                            <%=err.msg%>
                                                                                                                                                                        </div>
                                                                                                                                                                    </div>
                                                                                                                                                                    <%}%>
                                                                                                                                                                        <%}%>
                                                                                                                                                                            <%}%>
                                                                                                                                                                                <div
                                                                                                                                                                                    class="col-md-12">
                                                                                                                                                                                    <div
                                                                                                                                                                                        class="group_form">
                                                                                                                                                                                        <button
                                                                                                                                                                                            class="send_btn">Donate</button>
                                                                                                                                                                                    </div>
                                                                                                                                                                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- end contact -->
        <!-- end footer -->
        <%- include("partials/footer.ejs")%>